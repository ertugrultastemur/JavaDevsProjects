package kodlama.io.Devs.dataAccess.concretes;

import java.util.List;
import java.util.ArrayList;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

import kodlama.io.Devs.dataAccess.abstracts.IPLangRepository;
import kodlama.io.Devs.entities.concretes.PLang;

@Repository
public class InMemoryPLangRepository implements IPLangRepository{
	
	List<PLang> brands;
	
	@Autowired
	public InMemoryPLangRepository() {
		brands = new ArrayList<PLang>();
		brands.add(new PLang(1,"Java"));
		brands.add(new PLang(2,"C#"));
		brands.add(new PLang(3,"Python"));
	}

	@Override
	public void add(int id, String name) {
		

	}

	@Override
	public void update(int id) {
		brands.

	}

	@Override
	public void delete(int id) {
		brands.remove(id);
	}

	@Override
	public List<PLang> getAll() {
		
		return brands;
	}

	@Override
	public PLang getById(int id) {
		// TODO Auto-generated method stub
		return brands.get(id);
	}

}
